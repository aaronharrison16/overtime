<h1>Posts</h1>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>
              #
            </th>
            <th>
              Overtime Requested
            </th>
            <th>
              Date
            </th>
            <th>
              User
            </th>
            <th>
              Rationale
            </th>
            <th>
              Status
            </th>
          </tr>
        </thead>
        <tbody>
          <%= render @posts %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= paginate @posts %>
